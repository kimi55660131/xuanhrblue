<!--Header-->
<%- include('include/_header'); -%>
<!--/Header-->


<!--UserManagementForm-->
<div class="page-holder text-ComicNeue-regular400 w-100 d-flex flex-wrap" style=" margin-top: 3%; margin-left: 1%;" >
    <div class="container-fluid">
        <div class="row">
            
            <div class="col-lg-12">
                <div class="card shadow border-light" style="margin-top: 1%;background-color: rgb(255, 255, 255);">
                    <div class="card-body ">
                        <h4 class="card-title">User Management</h4>
                        <hr>
                        
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Employee Edit Form</h5>
                                
                              </div>    
                              <div class="modal-body">
                                <form method="POST" id="updateUserButton">
                                    <div class="mb-3 form-group">
                                      <label for="id1" class="col-form-label">ID:</label>
                                      <input type="hidden" name="id" value="<%= user._id %>">
                                      <input type="text" class="form-control" name="id1" value="<%= user.id1 %>">
                                    </div>
                                    <div class="mb-3 form-group">
                                      <label for="name" class="col-form-label">Name:</label>
                                      <input type="text" class="form-control" name="name" value="<%= user.name %>">
                                    </div>
                                    <div class="mb-3 form-group">
                                      <label for="inlineRadio" class="col-form-label">Gender:</label>
                                      <div id="inlineRadio">
                                      <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" name="gender" value="Male"<%= user.gender == 'Male' ? 'checked':'' %> >
                                        <label class="form-check-label" for="inlineRadio1">Male</label>
                                      </div>
                                      <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" name="gender" value="Female"<%= user.gender == 'Female' ? 'checked':'' %>>
                                        <label class="form-check-label" for="inlineRadio2">Female</label>
                                      </div>
                                      </div>
                                      
                                    </div>
                                    <div class="mb-3 form-group">
                                      <label for="recipient-name" class="col-form-label">NRIC:</label>
                                      <input type="text" class="form-control" name="nric" value="<%= user.nric %>"  >
                                    </div>
                                    <div class="mb-3 form-group">
                                      <label for="recipient-name" class="col-form-label">Payment Method:</label>
                                      <input type="text" class="form-control" name="paymentMethod" value="<%= user.paymentMethod %>" >
                                    </div>
                                    <div class="mb-3 form-group">
                                      <label for="recipient-name" class="col-form-label">Basic Salary /month:</label>
                                      <input type="text" class="form-control" name="basicSalary" value="<%= user.basicSalary %>" >
                                    </div>
                                  </form>
                                </div> 
                                <div class="modal-footer">
                                  <a href="/UserManagement" class="btn btn-secondary" data-bs-dismiss="modal">Back</a>
                                  <button type="submit" class="btn btn-primary" form="updateUserButton" >Update It !!!</button>
                                </div>
                              </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/UserManagementForm-->

</div>
</div>


<!--Footer-->
<%- include('include/_footer3') -%>
<!--Footer-->