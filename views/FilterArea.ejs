<!--FilterSystemContent-->
<form class="page-holder text-ComicNeue-regular400 w-100 d-flex flex-wrap" style=" margin-top: 3%; margin-left: 1%;" id="form" >
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5">
                <div class="card shadow border-light" style="background-color: rgb(255, 255, 255);">
                    <div class="card-body">
                        <h5 class="card-title">Filter Area</h5>
                        <hr>
                        <p class="card-text">Enter the filter content inside the box below.</p>
                        <div class="mb-3">
                            <textarea placeholder="Example: zamree" class="form-control" id="whitelist" rows="3" style="border: none; background-color: rgba(221, 160, 221, 0.26);"></textarea>
                        </div>
                        <input type="submit" value="Filter it !" class="btn shadow btn-primary"> ‚Üê Press it to Filter :D</input>
                    </div>
                </div>
                  
            </div>  
            <div class="col-lg-7">
                <div class="card shadow border-light" style="background-color: rgb(255, 255, 255);">
                    <div class="card-body ">
                        <h5 class="card-title">Log Area</h5>
                        <hr>
                        <p class="card-text">Paste the log content inside the box below.</p>
                        <div class="mb-3">
                            <textarea placeholder="No	Mchn	EnNo		Name		Mode	  IOMd   	DateTime	" class="form-control" id="input" rows="3" style="border: none; background-color: rgba(221, 160, 221, 0.26);"></textarea>
                        </div>
                        <input type="reset" value="Clear All" class="btn shadow btn-primary float-end"></input>
                    </div>
                </div>
            </div>
            <div class="col-lg" style="margin-top: 3%;">
                <div class="card w-100 shadow-sm border-light"> 
                    <div class="card-header">
                        <h5 class="card-title">Filter Result</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <textarea readonly class="form-control-plaintext" placeholder="Empty Result" class="form-control" id="output" rows="40" style="border: none; background-color: rgba(221, 160, 221, 0.26);"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
