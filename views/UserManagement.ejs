<!--Header-->
<%- include('include/_header'); -%>
<!--/Header-->


<!--UserManagementForm-->
<div class="page-holder text-ComicNeue-regular400 w-100 d-flex flex-wrap" style=" margin-top: 3%; margin-left: 1%;" >
    <div class="container-fluid">
        <div class="row">
            
            <div class="col-lg-12">
                <div class="card shadow border-light" style="margin-top: 1%;background-color: rgb(255, 255, 255);">
                    <div class="card-body ">
                        <h4 class="card-title">User Management</h4>
                        <hr>
                        <div class="card  border-light" style="margin-top: 1%;background-color: rgb(255, 255, 255);">
                            <div class="card-body">
                                <h5 class="d-inline text-decoration-underline">Employee Information</h5>
                                <button type="button" class="btn btn-primary d-inline float-end px-3 py-0 m-1" data-bs-toggle="modal" data-bs-target="#staticBackdrop"> 
                                    Add Employee
                                </button>

                                <!--EmployeeModalForm-->
                                <%- include('include/_Addemployeemodalform') -%>
                                <!--EmployeeModalForm-->

                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">ID</span>
                                    <input type="text" class="form-control" placeholder="0000" aria-label="Username" aria-describedby="basic-addon1">
                                    <button type="submit" class="btn btn-primary ">Confirm identity</button>
                                </div>
                                <table class="table table-bordered" >
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>NRIC</th>
                                            <th>Payment Method</th>
                                            <th>Basic Salary /month</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%- include('include/_showUser')-%>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card  border-light" style="background-color: rgb(255, 255, 255);">
                            <div class="card-body">
                                <h5 class="text-decoration-underline">Salary Information</h5>
                                <div class="mb-3">
                                    <label for="formGroupExampleInput" class="form-label">Variable Pay</label>
                                    <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">OT /hours</span>
                                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="00">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="formGroupExampleInput" class="form-label">Claim</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">Code</span>
                                        <input type="text" class="form-control" placeholder="P0000" aria-label="Username" aria-describedby="basic-addon1">
                                        <button type="submit" class="btn btn-primary ">Add Code</button>
                                    </div>
                                    <table class="table table-bordered" >
                                        <thead>
                                            <tr>
                                                <th><span class="Code">Code</span></th>
                                                <th><span class="Description">Description</span></th>
                                                <th><span class="Amount">Amount</span></th>
                                                <th><span class="Quantity">Quantity</span></th>
                                                <th><span class="Unit">Unit</span></th>
                                                <th><span class="SubTotal">Sub-Total</span></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>P0000</td>
                                                <td>Petrol Allowance</td>
                                                <td>0.00</td>
                                                <td>0000</td>
                                                <td>KM</td>
                                                <td>0000.00</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="mb-3">
                                    <label for="formGroupExampleInput" class="form-label">Variable Deduction</label>
                                    <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">Late /minutes</span>
                                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="00">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="formGroupExampleInput" class="form-label">Allowance</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                          Arrive On Time
                                        </label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                          Achieve Goal
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                          No MC & Leave in month
                                        </label>
                                    </div>
                                </div>
                                <input type="submit" value="Submit" class="btn shadow btn-primary"></input>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/UserManagementForm-->



</div>
</div>


